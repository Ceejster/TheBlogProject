@using TheBlogProject.Services

@inject IImageService imageService
@model IEnumerable<TheBlogProject.Models.Blog>

@{
    ViewData["Title"] = "Blogs";
}

<h1>Blogs</h1>
@if (User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="Create">Write new blog?</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="d-none d-lg-table-cell">
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th class="d-none d-lg-table-cell">
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUserId)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.BlogUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => blog.Name)
                </td>
                <td>
                    @Html.Raw(blog.Description)
                </td>
                <td class="d-none d-lg-table-cell">@blog.Created.ToString("yyyy-MM-dd")</td>
                <td class="d-none d-lg-table-cell">
                    @if (blog.Updated.HasValue)
                    {
                        @blog.Updated?.ToString("yyyy-MM-dd")

                    }
                </td>
                <td>
                    <img src="@imageService.DecodeImage(blog.ImageData, blog.ContentType)" class="img-fluid" />
                </td>
                <td>
                    @blog.BlogUser?.DisplayName
                </td>
                <td>
                    @blog.BlogUser
                </td>
                @if (User.IsInRole("Administrator"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@blog.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@blog.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@blog.Id">Delete</a>
                    </td>
                }

            </tr>
        }
    </tbody>
</table>