@using TheBlogProject.Services

@inject IImageService imageService
@model IEnumerable<TheBlogProject.Models.Blog>

@{
    ViewData["Title"] = "Blogs";
}

<h1>Blogs</h1>

<p>
    <a asp-action="Create">Write new blog?</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var blog in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => blog.Name)
            </td>
            <td>
                    @Html.Raw(blog.Description)
            </td>
                <td>@blog.Created.ToString("yyyy-MM-dd")</td>
                <td>@blog.Updated?.ToString("yyyy-MM-dd")</td>
            <td>
                    <img src="@imageService.DecodeImage(blog.ImageData, blog.ContentType)" />
            </td>
                <td>
                    @blog.BlogUser?.UserName
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@blog.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@blog.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@blog.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>