<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Life in Travel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheBlogProject.styles.css" asp-append-version="true" />

    <!--TinyMCE integration-->
    <script src="https://cdn.tiny.cloud/1/irkc0iejql1hl34e3s6yiuvnslby9sluoig07ngrx87gnd9i/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
</head>
<body>
    <header class="site-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Life in Travel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <!-- Make the "Destinations" dropdown header clickable -->
                            <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Destinations
                            </a>
                            <!-- Render the dropdown items using the ViewComponent -->
                            @await Component.InvokeAsync("Destinations")
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Blogs" asp-action="Index">Blogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Posts" asp-action="Index">Posts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Blogs" asp-action="Create">Create Blog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Posts" asp-action="Create">Create Post</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>



        <!-- Removed search feature for now. Want to see how it looks without. Don't know what purpose it will serve
        <div class="userSearch">
            <div class="searchIndex">
                // Can move this later. Form used to search for tags throughout the blog //
                <form asp-action="SearchIndex" asp-controller="Posts">
                    <div class="input-group mt-5">
                        <input type="text" name="SearchTerm" class="form-control" placeholder="Searching for?" />
                        <div class="input-group-append">
                            <button class="commonButton" type="submit">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        -->

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

