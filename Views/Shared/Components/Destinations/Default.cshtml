@model List<Destination>

<ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
    <a asp-controller="Destinations" asp-action="Index" class="dropdown-item">All Spots</a>
    @if (Model.Any())
    {
        foreach (var destination in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Destinations" asp-action="Details" asp-route-slug="@destination.Slug">@destination.Area</a>
            </li>
        }
    }
    else
    {
        <li><a class="dropdown-item" href="#">No destinations found</a></li>
    }
</ul>